{
  "name": "pr-notifier-app",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "start-dev": "NODE_ENV=development electron .",
    "build": "tsc -p . && webpack && node copyHtml.js",
    "dev": "npm run build && npm run start-dev",
    "pack": "electron-builder --dir",
    "electron": "^35.0.1",
    "dist": "dotenv -- electron-builder --mac --arm64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A macOS toolbar app to notify about PRs that need review",
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "electron-store": "^10.0.1",
    "node-notifier": "^10.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/node-notifier": "^8.0.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.2.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.yourname.prnotifier",
    "productName": "PR Notifier",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "YOUR_TEAM_ID"
      }
    },
    "afterSign": null,
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
